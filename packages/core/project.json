{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsup",
          "cp package.json ../../dist/core/package.json"
        ],
        "cwd": "packages/core",
        "parallel": false
      },
      "inputs": [
        "production",
        "sharedGlobals"
      ],
      "outputs": [
        "{workspaceRoot}/dist/core"
      ]
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "tsConfig": "packages/core/tsconfig.spec.json",
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ]
      }
    }
  }
}
