{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@qodalis/cli-core": ["../../dist/core"],
            "@qodalis/cli": ["../../dist/cli"]
        }
    },
    "include": ["src/**/*"]
}
